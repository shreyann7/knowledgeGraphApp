<%- include('partials/header') %>

<form method="POST">
  <label for="email">
    <b>Email</b>
  </label>
  <input id="email" type="email" placeholder="Enter Email" name="email" required="required">

  <label for="psw">
    <b>Password</b>
  </label>
  <input id="psw" type="password" placeholder="Enter Password" name="psw" required="required">

  <label for="pswrepeat">
    <b>Repeat Password</b>
  </label>
  <input id="pswrepeat" type="password" placeholder="Repeat Password" name="pswrepeat" required="required">

  <label for="fname">
    <b>Full Name</b>
  </label>
  <input id="fname" type="text" placeholder="Enter Full Name" name="fname" required="required">

  <button type="submit">Register</button>
</form>

<p>Already have an account? <a href="/login">Login</a></p>

<%- include('partials/footer') %>